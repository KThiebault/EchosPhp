{{ form_start(book_form) }}
    <div class="flex flex-col mb-3">
        {{ form_label(book_form.title, null, {label_attr: {class: 'mb-1'}}) }}
        {{ form_widget(book_form.title, {attr: {class: 'py-1 px-2 border-1 rounded drop-shadow'}}) }}
    </div>

    <div class="flex flex-col mb-6">
        {{ form_label(book_form.summary, null, {label_attr: {class: 'mb-1'}}) }}
        {{ form_widget(book_form.summary, {attr: {class: 'py-1 px-2 border-1 rounded drop-shadow', rows: '6'}}) }}
    </div>

    <div class="flex justify-end">
        <button class="text-gray-800 border-1 rounded drop-shadow bg-blue-200 py-1 px-3.5">{{ btn_label }}</button>
    </div>
{{ form_end(book_form) }}